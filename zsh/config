export EDITOR='vim'

# zsh-completions
fpath=(~/tools/zsh-completions/src $fpath)

# Path to your oh-my-zsh configuration.
ZSH=$HOME/.oh-my-zsh

# Theme
ZSH_THEME="schfkt"

# Plugins
plugins=(git colored-man)

DISABLE_AUTO_UPDATE="true"

# turn off annoying autocorrect
DISABLE_CORRECTION="true"

# don't change automatically title for tmux windows
export DISABLE_AUTO_TITLE=true

source $ZSH/oh-my-zsh.sh

# zsh-syntax-highlighting
source ~/tools/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh
ZSH_HIGHLIGHT_HIGHLIGHTERS=(main brackets pattern cursor)

# npm tab completion
if npm -v >/dev/null 2>&1; then
    . <(npm completion)
fi

# fix fox ctrl+u hotkey
bindkey \^U backward-kill-line
