# disable some shit from oh-my-zsh
unalias ..
unalias ll

# git
alias gcoam='git commit -am'
alias gcom='git commit -m'
alias gpoh='git push origin HEAD'
alias gh='git log --graph --pretty=format:"%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset" --abbrev-commit'
alias ghv='git log --graph --date=short --decorate --abbrev-commit --stat'
alias ghva='git log --graph --date=short --decorate --abbrev-commit --stat --all'
alias gsh='git stash'
alias gpo='git push origin'
alias glr='git pull -r'
alias glro='git pull -r origin'
alias gau='git add -u'

# package management
alias ai='sudo apt-get install'
alias au='sudo apt-get update'
alias arm='sudo apt-get remove'
alias acs='apt-cache --names-only search'
alias ac='apt-cache'
alias repo='sudo add-apt-repository'
alias autorm='sudo apt-get autoremove'
alias upgrade='sudo apt-get update && sudo apt-get upgrade'

# misc
alias re!='source ~/.zshrc'
alias svc='sudo service'
alias pd="cd -"
alias dl='dolphin . &'
alias cuke='cucumber -f html -b'
alias plf='pgrep -lf'
alias vg='vagrant'
alias ll='ls -lh'
alias gs='false' # fuck it
alias ccat='pygmentize -g'
alias dotfiles='cd ~/dotfiles'

# jobs management
alias j='jobs'

# %1 - %9
for i in {1..9}; do
  alias j$i="%$i"
done

# download file by link from clipboard
alias dw='xclip -o | xargs wget'

# tmux
alias tls='tmux ls'
alias ta='tmux attach-session -t'
alias tn='tmux new-session -s'
alias tk='tmux kill-session -t'

# vim
alias v='vim'

# rvm
alias ru='rvm use'
alias rls='rvm list'
alias rg='rvm gemset'

